<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
         version="1.2">
  <lifecycle>
            <phase-listener>edu.harvard.hmdc.vdcnet.util.AllPhaseListener</phase-listener>
            <phase-listener>edu.harvard.hmdc.vdcnet.util.AjaxPhaseListener</phase-listener>
            <phase-listener>edu.harvard.hmdc.vdcnet.util.RestoreViewPhaseListener</phase-listener>
  </lifecycle>           
  <factory>
      <application-factory>com.sun.faces.application.ApplicationFactoryImpl</application-factory>
      <faces-context-factory>com.sun.faces.context.FacesContextFactoryImpl</faces-context-factory>
      <lifecycle-factory>com.sun.faces.lifecycle.LifecycleFactoryImpl</lifecycle-factory>
      <render-kit-factory>com.sun.faces.renderkit.RenderKitFactoryImpl</render-kit-factory>
  </factory>
  <application>
   <!-- Set default locale and add supported locales here... -->
   <locale-config>
      <default-locale>en</default-locale>
      <supported-locale>de</supported-locale>
      <supported-locale>fr</supported-locale>
      <supported-locale>es</supported-locale>
    </locale-config>
    <message-bundle>BundleHelp</message-bundle>
    <message-bundle>Bundle</message-bundle>
    <message-bundle>EditStudyBundle</message-bundle>
    <message-bundle>StudyBundle</message-bundle>
    <message-bundle>customMessages</message-bundle>
    <message-bundle>DataListBundle</message-bundle>
    <action-listener>
        edu.harvard.hmdc.vdcnet.util.VDCActionListener
    </action-listener>
  </application>
  <application>
    <resource-bundle>
      <base-name>BundleAnalysis</base-name>
      <var>bundleAnalysis</var>
    </resource-bundle>
    <locale-config>
      <default-locale>en</default-locale>
      <!--supported-locale>ja</supported-locale -->
    </locale-config>
  </application>
  <component>
	  <component-type>scroller</component-type>
	  <component-class>edu.harvard.hmdc.vdcnet.web.customComponent.scroller.ScrollerComponent</component-class>
  </component>
  <component>
      <component-type>DvnInlineHelp</component-type>
      <component-class>edu.harvard.hmdc.vdcnet.web.component.DvnInlineHelp</component-class>
  </component>
  <component>
      <component-type>DvnTooltip</component-type>
      <component-class>edu.harvard.hmdc.vdcnet.web.component.DvnTooltip</component-class>
  </component>
  <component>
      <component-type>DvnInlineHelpSupport</component-type>
      <component-class>edu.harvard.hmdc.vdcnet.web.component.DvnInlineHelpSupport</component-class>
  </component>
  <component>
      <component-type>DvnDataList</component-type>
      <component-class>edu.harvard.hmdc.vdcnet.web.component.DvnDataList</component-class>
    </component>
  <!-- validators -->
  <validator>
      <validator-id>CharacterValidator</validator-id>
      <validator-class>edu.harvard.hmdc.vdcnet.util.CharacterValidator</validator-class>
  </validator>
  <validator>
      <validator-id>EmailValidator</validator-id>
      <validator-class>edu.harvard.hmdc.vdcnet.util.EmailValidator</validator-class>
  </validator>
  <validator>
      <validator-id>UrlValidator</validator-id>
      <validator-class>edu.harvard.hmdc.vdcnet.util.UrlValidator</validator-class>
  </validator>
    <validator>
      <validator-id>XhtmlValidator</validator-id>
      <validator-class>edu.harvard.hmdc.vdcnet.util.XhtmlValidator</validator-class>
  </validator>
    <validator>
      <validator-id>DateValidator</validator-id>
      <validator-class>edu.harvard.hmdc.vdcnet.util.DateValidator</validator-class>
  </validator>
</faces-config>
