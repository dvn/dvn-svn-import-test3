            </excludes>
            -->
        </resource>
    </resources>
    <testResources>
        <testResource>
            <directory>src/test/resources</directory>
        </testResource>
    </testResources>
    <plugins>
        <!--
        <plugin>
            <artifactId>maven-resources-plugin</artifactId>
